#!/bin/bash

# tacc specific 

repo=/root/salt-tacc/Jetstream-Salt-States
privrepo=/root/salt-tacc/tacc-private

mkdir -p /srv/pillar
rsync -avx $repo/pillar/ /srv/pillar

mkdir -p /srv/salt
rsync -avx $repo/states/ /srv/salt

cp -f $privrepo/salt/passwords.sls /srv/pillar
cp -f $privrepo/salt/vars.sls /srv/pillar

rsync -avx $privrepo/salt/ceph-config /srv/salt/ceph
